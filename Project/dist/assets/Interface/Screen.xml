<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />
  <screen id="start">
    <layer id="background" childLayout="center">
      <image filename="Interface/startBackGround.gif"  width="100%" height="100%"></image>
    </layer>
    <layer id="foreground" childLayout="vertical">
      <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center">
      </panel>
      <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center">
       
      </panel>
      <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" >
        <panel id="panel_bottom_left" height="50%" width="100%" valign="center" childLayout="center">
            <text text="Press Space to Start" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
        </panel>
        <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">
        </panel>
      </panel>
    </layer>
  </screen>
  <screen id="biome">
    <layer id="background" childLayout="center">
    </layer>
    <layer id="foreground" childLayout="horizontal">
       
      <panel id="panel_left" width="100%" height="100%" childLayout="vertical" >
      <image filename="Interface/choosebiome.jpg"  width="100%" height="100%"></image>
      </panel>
    </layer>
  </screen>
  <screen id="animal">
    <layer id="background" childLayout="center">
    </layer>
    <layer id="foreground" childLayout="horizontal">
       
      <panel id="panel_left" width="100%" height="100%" childLayout="vertical" >
      <image filename="Interface/chooseanimals.jpg"  width="100%" height="100%"></image>
      </panel>
    </layer>
  </screen>
  <screen id="fin">
    <layer id="background" childLayout="center">
    </layer>
    <layer id="foreground" childLayout="horizontal">
       
      <panel id="panel_left" width="100%" height="100%" childLayout="vertical" >
      <image filename="Interface/gameend.png"  width="100%" height="100%"></image>
      </panel>
    </layer>
  </screen>
  <screen id="win">
    <layer id="background" childLayout="center">
    </layer>
    <layer id="foreground" childLayout="horizontal">
       
      <panel id="panel_left" width="100%" height="100%" childLayout="vertical" >
      <image filename="Interface/endingscreen.png"  width="100%" height="100%"></image>
      </panel>
    </layer>
  </screen>
  <screen id="instructions">
    <layer id="background" childLayout="center">
    </layer>
    <layer id="foreground" childLayout="horizontal">
       
      <panel id="panel_left" width="100%" height="100%" childLayout="vertical" >
      <image filename="Interface/Instruction Screen.png"  width="100%" height="100%"></image>
      </panel>
    </layer>
  </screen>
</nifty>
